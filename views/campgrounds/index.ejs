<% layout('layouts/boilerplate') %>
    <h1>
		All Campgrounds
	  </h1>
	  <a href="/campgrounds/new">ADD CAMPGROUND</a>
	  
		  <% for(let campgrounds of camp){%>
			  <div class="card" mb-2 >
				  <div class="row">
					  <div class="col-md-4">
						  <img class="img-fluid" src="<%=campgrounds.image[0].url%>">
					  </div>
				      <div class="rol-md-8">
						  <div class="card-body">					
							  <h5 class="card-title">
								  <%= campgrounds.title %>
							  </h5>
							  <p class="card-text">
								  <small class="text-muted"><%= campgrounds.description %></small>
							  </p>
							  <a class="btn btn-primary" href="/campgrounds/<%= campgrounds._id %>" > View <%= campgrounds.title %></a>
						  </div>
				      </div>
				  </div>
              </div>
			<% } %> 